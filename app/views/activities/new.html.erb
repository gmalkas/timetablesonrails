<% title "Créer une activité", @course.name, @school_year %>

<header>
  <h1><%= @school_year %> / <%= @course.name %> / Créer une activité</h1>
</header>

<section id="creer-activite" class="new-activity">

  <% if @activity.errors.any? %>
    <p class="error">
      Ce formulaire comporte <%= pluralize @activity.errors.count, "erreur" %>.
    </p>
  <% end %>

  <%= form_for @activity, url: school_year_course_activities_path(@school_year, @course), html: { class: 'centered-form' } do |t| %>
    <div class="fields">
      <%= render 'form', t: t %>

      <div class="actions">
        <%= t.submit "Créer &rarr;".html_safe %>
      </div>
    </div>
  <% end %>
</section>
