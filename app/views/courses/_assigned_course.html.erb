<article class="course">
  <img class="show-details" src="assets/plus_alt_16x16.png" alt="+" />
  <h3><%= link_to course.name, course %></h3>

  <p style="" class="informations">
    &rarr;
    <span class="manager-name"><%= course.manager.name %></span>
    <span style="display: inline-block; margin: 0 0.25em; background-color: #943500; color: #FFF; border-radius: 4px; padding: 0.1em 0.3em;">3 activités</span>
  </p>

  <div class="activities">

  </div>

  <div class="details">
    <p class="actions">
      <% if can? :create, Activity.new %> 
        <%= link_to "Créer une activité", new_course_activity_path(course), class: "button icon add" %>
      <% end %>
      <% if can? :resign, course %>
        <%= link_to "Démissionner", resign_as_manager_course_path(course), method: :post, class: "button" %>
      <% end %>
      <% if current_user.administrator? %>
        <%= link_to "Supprimer", course, method: :delete, confirm: "Êtes-vous sûr de vouloir définitivement supprimer ce cours ? Toutes les données associées seront perdues !", class: "button icon trash" %>
      <% end %>
    </p>
  </div>
  
</article>
