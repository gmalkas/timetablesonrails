<% title "Tableau de bord" %>

<header> 
  <hgroup>
    <h1>Tableau de bord</h1>
  </hgroup>
</header>

<section class="active-year">

  <section class="utilities nav-tools">
    <header>
      <%= link_to "Gestion des années scolaires &rarr;".html_safe, school_years_path %>
    </header>
  </section>

  <% if @active_school_year %>
    <header>
      <h1>Année en cours / <%= @active_school_year %></h1>
    </header>

    <%= render 'school_years/active_year', active_school_year: @active_school_year %>
  <% end %>
</section>

<section class="recent-activity">

  <section class="utilities nav-tools">
    <header>Depuis</header>
    <p>
      &raquo; <a href="">1 semaine</a>
      &rarr; <span style="font-style: italic;">2 semaines</span>
      &raquo; <a href="">1 mois</a>
      &raquo; <a href="">3 mois</a>
    </p>
  </section>

  <header>
    <h1>Activité récente</h1>
  </header>

  <% @notifications.each do |date, notifications| %>
    <article>
      <header>
        <h1><%= l date, format: :human %></h1>
      </header>

      <ol>
        <% notifications.each do |notification| %>
          <%= notification.render self %>
        <% end %>
      </ol>
    </article>
  <% end %>
</section>
